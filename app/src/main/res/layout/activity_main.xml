<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:background="#8E1D1D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hoang Van Nam"
        app:layout_constraintHorizontal_bias="0.7"
        android:layout_marginTop="50dp"
        android:paddingTop="70dp"

        android:layout_marginBottom="800dp"
        android:id="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView

        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvAge"
        tools:text="20 years old"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"

        />
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/tvButton2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:id="@+id/tvButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4D9825"
        />
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvButton1"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        />
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tvButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_login"
        app:layout_constraintCircle="@id/btn3"
        app:layout_constraintCircleRadius="80dp"
        app:layout_constraintCircleAngle="180"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>